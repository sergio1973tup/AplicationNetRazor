@page
@model AplicationNetRazor.Pages.Profesores.CrearModel
@{
    ViewData["Title"] = "Dar de alta Profesor";
}

<div class="card">
            <div class="card-header bg-secondary text-white">
                    <h2 class="test-secondary">Listas de Profesores</h2>
            </div>
        </div>
             <div class="card-body ">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                    <div class="container" style="padding: 30px">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="Profesor.Nombre"></label>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Profesor.Nombre" class="form-control"/>
                                </div>
                                <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="Profesor.Apellido"></label>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Profesor.Apellido" class="form-control"/>
                                </div>
                                <span asp-validation-for="Profesor.Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="Profesor.esp"></label>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Profesor.esp" class="form-control"/>
                                </div>
                                <span asp-validation-for="Profesor.esp" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="Profesor.fecha_ing"></label>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Profesor.fecha_ing" class="form-control"/>
                                </div>
                                <span asp-validation-for="Profesor.fecha_ing" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="Profesor.fecha_nac"></label>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Profesor.fecha_nac" class="form-control"/>
                                </div>
                                <span asp-validation-for="Profesor.fecha_nac" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    <input type="submit"value="Crear" class="btn btn-primary form-control"/> 
                                </div>
                                <div class="col-sm-4">
                                    <a asp-page="Index" class="btn btn-success form-control"  > Volver a Profesores</a>
                                </div>
                            </div> 
                        </div>

                    </div>
                </form>
            </div>
        <div/>
<div/>